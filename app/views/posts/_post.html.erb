<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Social network:</strong>
    <%= post.social_network %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user.email_address %>
  </p>

  <h1>Review da IA</h1>
  <p>
    <%= post.ai_review.content if post.ai_review.present? %>
  </p>

</div>
